{
    "name": "petparadise/api",
    "description": "Pet Paradise Backend API",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "phpmailer/phpmailer": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "PetParadise\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}